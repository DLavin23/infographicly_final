<div class="container">
  <div class="container">
        <!-- Main hero unit for a primary marketing message or call to action -->
        <div class="hero-unit">
          <h1>InfoGraphic.ly</h1>
          <br>
          <p>A beautifully simple way to organize articles you want to read</p>
          <br>
      
          <div class="well form-search">
            <%= form_for(@user) do |f| %>
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

            <p>
              <%= f.label :user_name %><br />
              <%= f.text_field :user_name %>
            </p>
            <p>
              <%= f.label :password %><br />
              <%= f.password_field :password %>
            </p>
            <p>
              <%= f.label :email %><br />
              <%= f.text_field :email %>
            </p>
            <p>
              <%= f.submit "Sign up" %>
            </p>
          <% end %>
            <div class="btn-group"
              <%= link_to 'Not your first time here??', user_url(:returning) %>
              <a class="btn" href="user_url(:returning)">Returning User</a> 
            </div>
          </div>




        <hr>

        <footer>
