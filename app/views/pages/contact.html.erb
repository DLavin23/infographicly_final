<div class="span9 hero-body">    
  <div class="hero-unit">
    <div class="row">
      <div class="span8">
        <form class="form-horizontal">
          <fieldset>
            <legend>Have a question? Contact us!</legend>
            <div class="control-group">
              <label class="control-label" for="input01">Text Input</label>
              <div class="controls">
                <input type="text" class="input-xlarge" id="input01" placeholder="sample text">
                <p class="help-block">description helper here...</p>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="optionsCheckbox">Checkbox</label>
              <div class="controls">
                <label class="checkbox">
                  <input type="checkbox" id="optionsCheckbox" value="option1">Option one is great!
               </label>
             </div>
           </div>
           <div class="control-group">
             <label class="control-label" for="select01">Select list</label>
             <div class="controls">
                <select id="select01">
                   <option>something</option>
                   <option>2</option>
                   <option>3</option>
                   <option>4</option>
                   <option>5</option>
                 </select>
             </div>
           </div>
           <div class="control-group">
             <label class="control-label" for="textarea">Text Area</label>
             <div class="controls">
               <textarea class="input-xlarge" id="textarea" placeholder="Insert question here" rows="3"></textarea>
             </div>
           </div>
           <div class="form-actions">
             <button type="submit" class="btn btn-primary">Save changes</button>
             <button class="btn">Cancel</button>
           </div>
         </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>